/* ==== layout ==== */

body {
    margin: 0;
    padding: 0;
    font-size: 100%;
    font-family: sans-serif;
    font-weight: 100;
    text-align: justify;
    text-shadow: 0 0 1px rgba(0,0,0,0.15);
}
img {
    max-width: 500px;
}
audio {
    background-color: #fff;
    width:100%;
    margin-left: -16px;
    padding: 0;
}
/*header*/
.banner {
    background: #000;
    height: 0.5rem;
    margin-bottom: 8vmin;
}

/*section*/
.main {
    width:500px;
    min-width: 300px;
    margin: 3rem auto;
    padding: 40px;
}

/*footer*/
.site-footer {
    position: fixed;
    left: 0;
    right: 0;
    margin:0 auto;
    background: #FFF;
    bottom: 0;
    width: 500px;
    min-width: 300px;
    padding: 0;
    z-index: 1;
}

/* ==== general ==== */

a {
    text-decoration: none;
}

a:focus {
    outline: none;
    color: #000;
    background-color: #FF0;
}

h1, h2 {
    font-weight: normal;
}

/*.banner h1*/
.logo { display: none; }

.post a {
    color:red;
}
.posts {
    margin: 0;
    padding: 0;
}

/*nav*/
.pagination {
    line-height: 2rem;
    clear: both;
}

/*section li*/
.post-item,
.post-item .title {
    display: inline;
    float: left;

    margin: 0 0.125rem 0 0;
    padding: 0;
    font-size: 2rem;
    line-height: 3rem;
}

.single_title {
    margin: 0 -2rem;
}

/*footer ul*/
.navi-menu {
    margin: 0;
    padding: 0;
}

/*footer li*/
.menu-item {
    display: inline;
    line-height: 2rem;
    margin: 0;
    padding: 0;
}

.post-item:after,
.menu-item:after {
    content: " / ";
    color:red;
}

.post-item:last-of-type:after,
.menu-item:last-of-type:after {
    content: none;
}

.meta {
    display: none;
    line-height: 2rem;
    margin: 0;
    text-align: right;
}
.meta a {
    color:#000;
}

.single .title {
    text-align: center;
    margin-bottom: 2.5rem;
}

.single a[title^="Flickr"] {
    margin-left: -40px;
}

/* ==== color ==== */

a {
    color: #000;
    font-weight: 400;
}

a:hover {
    color: #555;
}

::selection,
::-moz-selection {
    color: #000;
    background: #E0E0E0;
}

.main {
    background: #FFF;
}
